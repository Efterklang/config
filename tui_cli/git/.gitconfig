# User Configuration
[user]
	name = Efterklang
	email = gaojiaxing2004@qq.com
	useConfigOnly = true

# Core Settings
[core]
	editor = nvim
	autocrlf = input
	whitespace = cr-at-eol
	pager = delta
	rebase = true
	quotepath = false
	longpaths = true
	trustctime = false
	excludesfile = ~/.gitignore
	ignorecase = true
	untrackedcache = true

# Network and Protocol Settings
[http]
	postBuffer = 655360000
	lowSpeedLimit = 0
	lowSpeedTime = 999999
	version = HTTP/1.1
	sslBackend = openssl

[protocol]
	version = 1

# Merge and Diff Settings
[merge]
	tool = vscode
	conflictStyle = zdiff3

[mergetool "vscode"]
	cmd = code --wait $MERGED

[mergetool]
	keepBackup = false

[diff "text"]
	textconv = bat

# Git LFS Settings
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[lfs]
	concurrenttransfers = 16
	fetchrecentrefsdays = 0
	pruneoffsetdays = 0
	dialtimeout = 3
	tlstimeout = 3

[merge "lfs-text"]
	driver = git lfs merge-driver --ancestor %O --current %A --other %B --marker-size %L --output %A --program 'git merge-file --stdout --marker-size=%%L %%A %%O %%B >%%D'

# Credential Settings
[credential]
	helper = store

[credential "helperselector"]
	selected = wincred

# Miscellaneous Settings
[init]
	defaultBranch = main

[safe]
	directory = *

[sendpack]
	sideband = false

[rebase]
	backend = merge

[pull]
	rebase = true

[gc]
	auto = 0
[push]
	autoSetupRemote = true

# Delta Settings 
[include]
    path = .delta.gitconfig